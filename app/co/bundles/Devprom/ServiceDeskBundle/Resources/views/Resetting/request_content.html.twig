<form role="form" class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
    <legend>{{ 'resetting.title'|trans({}, 'FOSUserBundle') }}</legend>
    {% if invalid_username is defined %}
        <div class="alert alert-warning">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</div>
    {% endif %}
    <div class="control-group">
        <label for="username" class="control-label">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls form-group">
            <div class="col-sm-8" >
                <input type="text" id="username" name="username" required="required" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
        <a class="btn btn-default" href="{{ path('fos_user_security_login') }}">{{ 'resetting.request.cancel'|trans({}, 'FOSUserBundle') }}</a>
    </div>
</form>
