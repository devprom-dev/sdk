{% extends '::content.html.twig' %}

{% block title %}
    [I-{{ issue.id }}] {{ issue.caption }}
{% endblock %}

{% block content -%}
    <h2 class="page-title">{{ 'edit.title'|trans }}</h2>
    <section class="widget">
        <div class="body">
            <form role="form" class="form-horizontal" action="{{ path('issue_update', { 'id': issue.id }) }}" method="POST" {{ form_enctype(edit_form) }}>
                <input type="hidden" name="_method" value="PUT" />

                {{ form_widget(edit_form) }}

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">{{ 'issue.update'|trans }}</button>
                    <a class="btn btn-default" href="{{ path('issue_show', { 'id': issue.id }) }}">{{ 'issue.cancel'|trans }}</a>
                </div>
            </form>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
{% endblock %}