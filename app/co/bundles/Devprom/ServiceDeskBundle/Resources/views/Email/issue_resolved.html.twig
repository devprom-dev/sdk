{% block subject %}
    {{ 'issue.resolved.subject'|trans({ '%id%' : issue.id }, 'emails', language) }}
{% endblock subject %}

{% block body_html %}
    {% set issueLink %}{{ url("issue_show", { "id": issue.id }) }}{% endset %}

    {% embed "DevpromServiceDeskBundle:Email:base_email.html.twig" %}
        {% block body %}
            {% autoescape false %}
                {% if version == '' %}
                    {{ 'issue.resolved.body'|trans({
                        '%title%' : issue.caption,
                        '%link%' : issueLink,
                        '%comment%' : comment,
                    }, 'emails', language) }}
                {% else %}
                    {{ 'issue.resolved-version.body'|trans({
                        '%title%' : issue.caption,
                        '%link%' : issueLink,
                        '%comment%' : comment,
                        '%version%' : version,
                    }, 'emails', language) }}
                {% endif %}
            {% endautoescape %}
        {% endblock body %}
    {% endembed %}
{% endblock body_html %}
