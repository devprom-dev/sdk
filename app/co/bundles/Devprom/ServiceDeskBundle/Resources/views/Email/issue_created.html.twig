{% block subject %}
    {{ 'issue.created.subject'|trans({ '%id%' : issue.id }, 'emails', language) }}
{% endblock subject %}

{% block body_html %}
    {% if issueLink|length < 1 %}
        {% set issueLink %}{{ url("issue_show", { "id": issue.id }) }}{% endset %}
    {% endif %}
    {% embed "DevpromServiceDeskBundle:Email:base_email.html.twig" %}
        {% block body %}
            {% include emailBody("issueCreated.twig",language) %}
        {% endblock body %}
    {% endembed %}
{% endblock body_html %}