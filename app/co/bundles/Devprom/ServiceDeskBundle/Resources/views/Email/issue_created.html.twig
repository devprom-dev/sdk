{% block subject %}
    {{ 'issue.created.subject'|trans({ '%id%' : issue.id }, 'emails', language)|convert_encoding('UTF-8', 'windows-1251') }}
{% endblock subject %}

{% block body_html %}
    {% set issueLink %}{{ url("issue_show", { "id": issue.id }) }}{% endset %}

    {% embed "DevpromServiceDeskBundle:Email:base_email.html.twig" %}
        {% block body %}
            {% autoescape false %}
            {{ 'issue.created.body'|trans({
            '%title%' : issue.caption,
            '%description%' : issue.description|unescapeHtml,
            '%product%' : issue.product,
            '%priority%' : issue.priority,
            '%type%' : issue.issueType,
            '%link%' : issueLink,
            }, 'emails', language)|convert_encoding('UTF-8', 'windows-1251') }}
            {% endautoescape %}
        {% endblock body %}
    {% endembed %}
{% endblock body_html %}