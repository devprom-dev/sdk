{% block subject %}
    {{ 'issue.commented.subject'|trans({ '%id%' : issue.id }, 'emails', language) }}
{% endblock subject %}

{% block body_html %}
    {% set issueLink %}{{ url("issue_show", { "id": issue.id }) }}{% endset %}

    {% embed "DevpromServiceDeskBundle:Email:base_email.html.twig" %}
        {% block body %}
            {% autoescape false %}
            {{ 'issue.commented.body'|trans({
                '%title%' : issue.caption,
                '%link%' : issueLink,
                '%comment%' : comment,
            }, 'emails', language) }}
            {% endautoescape %}
        {% endblock body %}
    {% endembed %}
{% endblock body_html %}
